import axios from 'axios';

class LightingDTO {
    constructor(id, colorRed, colorBlue, colorGreen, powerWat, lux, uptimeDays, status) {
      this.id = id;
      this.colorRed = colorRed;
      this.colorBlue = colorBlue;
      this.colorGreen = colorGreen;
      this.powerWat = powerWat;
      this.lux = lux;
      this.uptimeDays = uptimeDays;
      this.status = status;
    }
  }

function GetLighting(){const lights = [];
axios.get()
.then(response => {
    const lights = response.data.map(l => new LightingDTO(l.id, l.colorRed, l.colorBlue, l.colorGreen, l.powerWat, l.lux, l.uptimeDays, l.status));
    this.setState({ lights });
})
.catch(error => console.error(error));
},[]);